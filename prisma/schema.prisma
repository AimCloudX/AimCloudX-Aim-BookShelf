generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Book {
  id        String          @id @default(cuid())
  bookId    String          @unique
  title     String
  thumbnail String
  authors   Author[]
  isbn10    String?
  isbn13    String?
  content   String          @db.Text

  // Book と BookInstance は 1 対多
  instances BookInstance[]
  // Book と Review は 1 対多
  reviews   Review[]
}

model Author {
  id    String  @id @default(cuid())
  name  String
  books Book[]
}

model BookInstance {
  id          String   @id @default(cuid())
  bookId      String
  // Book の主キー（id）と関連付ける
  book        Book     @relation(fields: [bookId], references: [id])
  purchaser   String
  purchaseAt  DateTime
  location    String
}

model Review {
  id        String   @id @default(cuid())
  bookId    String
  // Book の主キー（id）と関連付ける
  book      Book     @relation(fields: [bookId], references: [id])
  reader    String
  content   String   @db.Text
}