generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// book
model Book {
  id        String    @id @default(cuid())
  title     String
  isbn      String?
  thumbnail String
  location  String
  authors   Author[]
}

model Author {
  id    String  @id @default(cuid())
  name  String
  books Book[]
}